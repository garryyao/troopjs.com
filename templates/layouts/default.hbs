---
layout: base.hbs
---

{{!-- page content
=================================== --}}
<div class="container">
  <div class="row">

    {{!-- side navigation
    =================================== --}}
    <div class="col col-lg-3">
      <div class="sidebar">
        {{#is area 'contrib'}}
          {{> sidenav-contrib }}
        {{/is}}
        {{#is area 'docs'}}
          {{> sidenav-docs }}
        {{/is}}
      </div>
    </div>

    {{!> edit-template-link }}

    {{! main content
    =================================== }}
    <div class="col col-lg-9">
      <div class="panel panel-docs">
        {{#markdown}}
          {{> body }} {{> generated-links.md }}
        {{/markdown}}
        <hr>
        {{> footer }}
      </div>
    </div>
  </div>
</div>
